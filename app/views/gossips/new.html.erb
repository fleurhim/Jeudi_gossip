<div class="container"  style="margin: 5%; align-items: center">
  	<%= form_tag url_for(action: 'create'), method: "post" do %>
		<div class="form-group">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title, class: 'form-control' %>
      <br /> <br />
		</div>
		<div class="form-group">
      <%= label_tag 'Content' %>
      <%= text_area_tag 'content', @gossip.content, class: 'form-control' %>
      <br /> <br />
		</div>
    <%= submit_tag "Create Gossip", class: 'btn btn-success' %>

    <% end %>
<br>

		<% if @gossip.errors.any? %>
			<div class="alert alert-danger" role="alert">
		  	Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :
		  	<ul>
		    	<% @gossip.errors.full_messages.each do |message| %>
		      	<li><%= message %></li>
		    	<% end %>
		  	</ul>
		  </div>
		<% end %>
</div>
